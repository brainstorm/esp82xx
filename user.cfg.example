###############################################################################
# User Options
###############################################################################

CHIP  = 8266
IP    = 192.168.4.1     # does not actually set the IP in firmware
PORT  = /dev/cu.usbserial-FTYKHBJT # could also be, i.e: /dev/ttyACM0 or /dev/cu.usbserial-xxxxxxxx
BAUD = 940200
WEB_PORT     = 80
COM_PORT     = 7777
BACKEND_PORT = 7878
PAGE_OFFSET  = 65536     # 1048576

SDK_DEFAULT  = $(HOME)/esp8266/esp-open-sdk
ESP_GCC_VERS = 4.8.5

DOCKER = yes
DOCKER_PREFIX = /work/
DOCKER_SDK_DEFAULT = /home/espbuild/esp-open-sdk
DOCKER_ESPTOOL_PY = $(DOCKER_SDK_DEFAULT)/esptool/esptool.py
DOCKCROSS = $(HOME)/bin/dockcross-xtensa

OPTS += -DICACHE_FLASH
#OPTS += -DVERIFY_FLASH_WRITE
#OPTS += -DDEBUG
#OPTS += -DFREQ=12500

PAGE_TITLE = esp82xx-basic
PAGE_SCRIPT =
PAGE_HEADING = Welcome to the basic Web-GUI
PAGE_INFO = This is the basic web interface for esp82xx-series chips
